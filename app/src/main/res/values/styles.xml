<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme1. -->
    <style name="AppTheme_noActionbar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_white</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/genova.Toolbar</item>
        <item name="android:background">@color/color_white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/genova.Toolbar</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:statusBarColor">@color/color_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
    </style>

    <style name="genova.ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/color_white</item>
    </style>


    <style name="genova.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>

    <style name="genova.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="titleTextColor">@color/primary_text</item>
        <item name="background">@color/color_white</item>
        <item name="titleTextAppearance">@style/genova.Toolbar.TitleText</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="iconTint">@color/secondary_text</item>
    </style>
    <style name="AppTheme.B1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_white_border</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>
    <style name="AppTheme.B4" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">8sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme1">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/color_white</item>
    </style>
</resources>